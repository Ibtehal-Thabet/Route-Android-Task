<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="com.example.domain.model.Product" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/product_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/primary_color"
            app:cardCornerRadius="14dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="12dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius_top_left="15dp"
                    app:riv_corner_radius_top_right="15dp"
                    app:shapeAppearanceOverlay="@style/image_style"
                    app:url="@{product.thumbnail}"
                    app:placeholder="@{@drawable/splash_screen}"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars"/>

                <ImageButton
                    android:id="@+id/fav_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="16dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/fav_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{product.title}"
                    style="@style/item_product_text_style"
                    android:maxLines="1"
                    app:layout_constraintTop_toBottomOf="@id/product_image"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{product.description}"
                    style="@style/item_product_text_style"
                    android:maxLines="1"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/egp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EGP"
                    style="@style/item_product_text_style"
                    app:layout_constraintTop_toBottomOf="@id/product_description"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="EGP"
                    />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{product.price.toString()}"
                    style="@style/item_product_text_style"
                    android:maxLines="1"
                    app:layout_constraintTop_toBottomOf="@id/product_description"
                    app:layout_constraintStart_toEndOf="@id/egp"
                    tools:text="1245"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/product_description"
                    app:layout_constraintStart_toEndOf="@id/product_price">

                    <TextView
                        android:id="@+id/egp_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/product_price_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{product.discountPercentage.toString()}"
                        android:textSize="13sp"
                        tools:text="15"
                        />

                    <TextView
                        android:id="@+id/percent_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/review_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/review"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/egp" />

                <LinearLayout
                    android:id="@+id/rate_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/review_tv"
                    app:layout_constraintStart_toEndOf="@+id/review_tv"
                    app:layout_constraintTop_toBottomOf="@id/product_price">

                    <TextView
                        android:id="@+id/left_barc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="("
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/product_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{product.rating.toString()}"
                        android:textColor="@color/text_color"
                        android:textSize="12sp"
                        tools:text="4.5" />

                    <TextView
                        android:id="@+id/right_barc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textSize="14dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/star_rate"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/rating_star"
                    app:layout_constraintStart_toEndOf="@id/rate_layout"
                    app:layout_constraintTop_toBottomOf="@id/product_price" />

                <ImageButton
                    android:id="@+id/add_to_cart_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_circle"
                    android:layout_margin="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintTop_toBottomOf="@id/product_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>